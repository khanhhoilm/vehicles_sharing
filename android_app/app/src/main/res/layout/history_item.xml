<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/temp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtStartAndFinishTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_alarm_blue_grey_600_24dp" />

            <TextView
                android:id="@+id/txtStartLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_place_blue_grey_600_24dp" />

            <TextView
                android:id="@+id/txtEndLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_directions_blue_grey_600_24dp" />
        </LinearLayout>
    </LinearLayout>

    <RatingBar
        android:id="@+id/rbAveragrRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="@color/star_color"
        android:indeterminateTint="@color/star_color"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="@color/star_color" />

    <LinearLayout
        android:id="@+id/lnButtonRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:weightSum="1">

        <Button
            android:id="@+id/btnMyRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:text="Đánh giá của tôi"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnYourRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:text="Đánh giá của người đi chung"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnSeeRating"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtWhoRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RatingBar
            android:id="@+id/rbRatingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="@color/star_color"
            android:indeterminateTint="@color/star_color"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/star_color"
            android:scaleX="0.5"
            android:scaleY="0.5" />

        <TextView
            android:id="@+id/txtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5" />

        <TextView
            android:id="@+id/txtFailure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_rating"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/color_line_field" />
</LinearLayout>