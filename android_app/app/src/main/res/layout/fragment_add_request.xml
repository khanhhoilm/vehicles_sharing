<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNeederDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/background_color"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



            <!--EditText
                android:id="@+id/txtCurLocate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="20"
                android:hint="Current location" /-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
           <!-- <fragment
                android:id="@+id/place_autocomplete_curneeder_fragment"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.9"/>-->
            <EditText
                android:id="@+id/txtCurLocate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.7"
                android:focusable="false"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/imgClearCurLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_clear_blue_grey_500_36dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
           <!-- <fragment
                android:id="@+id/place_autocomplete_destin_fragment"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.9"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                />-->
            <!--<AutoCompleteTextView
                android:id="@+id/autocomplete_des_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.7"
                android:singleLine="true" />-->
            <EditText
                android:id="@+id/txtDesLocate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.9"
                android:focusable="false"
                android:singleLine="true" />
            <ImageView
                android:id="@+id/imgClearDesLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_clear_blue_grey_500_36dp" />
        </LinearLayout>
        <!--fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            /-->
            <!--ImageView
                android:src="@drawable/ic_directions_car_indigo_a700_24dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                /-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spVehicleType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
               />


            <TextView
                android:id="@+id/txtTimeStart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/ic_alarm_blue_grey_500_36dp"
                android:focusable="false"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/background_color"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/add_request"
            android:textColor="@color/black" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/background_color" />

        <Button
            android:id="@+id/btnAddCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/cancel"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
